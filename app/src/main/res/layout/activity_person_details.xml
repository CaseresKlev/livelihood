<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonDetails">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">


    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#1a0ea8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border_bottom"
        android:src="@drawable/ic_person"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Klevie Jun R. Caseres"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Position:" />

                <TextView
                    android:id="@+id/details_textView_Position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="President" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Group:" />

                <TextView
                    android:id="@+id/details_textView_Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Group 2" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Contact:" />

                <TextView
                    android:id="@+id/details_textView_Contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="09656744977" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Birthday:" />

                <TextView
                    android:id="@+id/details_textView_BirthDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="May 21, 1993" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Membership Date:" />

                <TextView
                    android:id="@+id/details_textView_Membership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Group 2" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Spouse:" />

                <TextView
                    android:id="@+id/details_textView_Spouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Flordeliza Petilo" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Spouse:" />

                <TextView
                    android:id="@+id/details_textView_Education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="High School Graduate" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="# of Family Members:" />

                <TextView
                    android:id="@+id/details_textView_numFam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="8" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="# of Voters in the Family:" />

                <TextView
                    android:id="@+id/details_textView_numVoters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="8" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="T-SHirt Size" />

                <TextView
                    android:id="@+id/details_textView_tshirtSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="M" />
            </TableRow>

            <TableRow android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Added by:" />

                <TextView
                    android:id="@+id/details_textView_AddedBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Jezeer Louie Rubio" />
            </TableRow>


        </TableLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>