<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/panel_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:elevation="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter City:"
                android:textSize="18sp"/>
            <Spinner
                android:layout_width="130dp"
                android:id="@+id/spinner_choose_city"
                android:layout_height="wrap_content"
                android:textSize="18sp">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Barangay:"
                android:textSize="18sp"/>
            <Spinner
                android:id="@+id/spinner_choose_brgy"
                android:layout_width="130dp"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter Purok:"
                android:textSize="18sp"/>
            <Spinner
                android:layout_width="130dp"
                android:id="@+id/spinner_choose_purok"
                android:layout_height="wrap_content">
            </Spinner>
        </LinearLayout>



    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupListRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>